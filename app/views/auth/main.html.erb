<p>Please enter your credentials below</p>

<%= form_for :credentials, url: signup_path do |f| %>
	<table>
		<tr>
			<td><%= f.label :username %>:</td>
			<td><%= f.text_field :username%></td>
		</tr>
		<tr>
			<td><%= f.label :password %>:</td>
			<td><%= f.text_field :password %></td>
		</tr>
	</table>

	<%= f.submit %>
<% end %>
